{
  "name": "@ngx-devs/commitlint-plugin-imperative-test",
  "version": "1.0.0",
  "description": "commitlint plugin to ensure that commits are made using imperative mood",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/!(*.test).{js,d.ts}"
  ],
  "scripts": {
    "test": "c8 ava"
  },
  "keywords": [
    "commitlint",
    "commitlintplugin",
    "plugin",
    "rules",
    "imperative"
  ],
  "author": "Gleison de Almeida",
  "license": "MIT",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@commitlint/types": "^16.2.1",
    "ava": "^4.2.0",
    "c8": "^7.11.2",
    "semantic-release": "^19.0.2",
    "semantic-release-gitmoji": "^1.4.4",
    "typescript": "^4.6.3"
  },
  "ava": {
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": "tsc"
    }
  },
  "c8": {
    "reporter": [
      "cobertura",
      "lcovonly",
      "text"
    ],
    "include": [
      "dist/**/*.js"
    ]
  }
}
